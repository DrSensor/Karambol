{
    "include": ["src"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "*"
            ]
        },
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Array.prototype",
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    }
}
